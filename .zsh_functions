# tar and bzip a directory
function shrinkwrap() {
    local dir
    readonly dir=$1
    if [ -d $dir ]; then
        tar -cf ${dir}.tar $dir && bzip2 -9 ${dir}.tar && mv ${dir}.tar.bz2 ${dir}.tbz
    else
        printf "shrinkwrap: error: yo, I can't shrinkwrap ${dir}\n"
    fi
}
